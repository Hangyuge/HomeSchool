<?xml version="1.0" encoding="gb2312"?>
<!--指定Hibernate3映射文件的DTD信息-->
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >
<!--hibernate-mapping是映射文件的根元素-->
<hibernate-mapping package="com.linuxgroup.model" >
    <!-- 每个class元素对应一个持久话对象-->
    <class name="com.linuxgroup.model.Message" table="messages_table">
            <id name="id" column="id">
                <!--定义主键生成器-->
                <generator class="identity"/>
            </id>
            <!-- property元素定义常规属性-->
            <property name="fromPersonId"  type="integer"/>
            <property name="toPersonId"  type="integer"/>
            <property name="time"  type="date"/>
            <property name="type"  type="integer"/>

    </class>
</hibernate-mapping>