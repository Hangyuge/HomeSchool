<?xml version="1.0" encoding="gb2312"?>
<!--指定Hibernate3映射文件的DTD信息-->
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >
<!--hibernate-mapping是映射文件的根元素-->
<hibernate-mapping package="com.linuxgroup.model" >
    <!-- 每个class元素对应一个持久话对象-->
    <class name="PersonModel" table="personModel_table">
        <!--id元素定义持久化对象-->
        <id name="id" column="personModel_id">
            <!--指定主键生成策略-->
            <generator class="identity"/>
        </id>
        <!-- property元素定义常规属性-->
        <property name="name"/>
        <property name="sex"/>
        <property name="address"/>
        <property name="communication"/>
        <property name="type"/>
        <!--Person和student的一对多关系-->
        <list name="studentList">
            <!--指定关联的外键到-->
            <key column="id"/>
            <!--用以映射到关联类属性-->
            <one-to-many class="StudentModel"/>
        </list>
    </class>
</hibernate-mapping>