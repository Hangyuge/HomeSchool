<?xml version="1.0" encoding="gb2312"?>
<!--指定Hibernate3映射文件的DTD信息-->
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >
<!--hibernate-mapping是映射文件的根元素-->
<hibernate-mapping package="com.linuxgroup.model" >
    <!-- 每个class元素对应一个持久话对象-->
    <class name="com.linuxgroup.model.Student" table="student_table">
        <id name="id" column="id" >
            <generator class="identity"/>
        </id>
        <!-- property元素定义常规属性-->
        <property name="studentId" column="studentId" type="integer"/>
        <property name="name" column="name" type="string"/>
        <property name="sex" column="sex" type="string"/>
        <property name="teacherId" column="teacherId" type="integer"/>
        <property name="parentId" column="parentId" type="string"/>
    </class>
</hibernate-mapping>